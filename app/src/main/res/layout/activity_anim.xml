<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/common_10"
    android:paddingBottom="@dimen/common_10">

    <Button
        android:id="@+id/btn_operate_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btn_anim"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_14sp" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/common_50"
        android:layout_height="@dimen/common_50"
        android:foregroundGravity="center_horizontal"
        android:layout_marginTop="@dimen/common_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_operate_anim" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading">

    <ProgressBar
        android:id="@+id/pb_grow_loading"
        android:layout_width="@dimen/common_50"
        android:layout_height="@dimen/common_50"
        android:layout_marginTop="@dimen/common_20"
        android:foregroundGravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/btn_anim"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_14sp" />
</merge>